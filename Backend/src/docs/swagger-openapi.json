        "/api/comment/{id}/event": {
            "post": {
                "tags": [
                    "Comment"
                ],
                "summary": "Crear un commentario en el evento",
                "description": "Ingresar un mensaje y pasarle el id del evento, y el usuario tiene que estar loggeado con el rol USER",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
