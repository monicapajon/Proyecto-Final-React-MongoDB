    },
    "components": {
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Solamente pasarle el token para que puedas hacer la solicitud en las peticiones protegidas"
            }
        },
        "schemas": {
            "Events": {
                "type": "object",
                "description": "Propiedades sobre el Schema Events",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Es el identificador de cada eventos"
                    },
                    "name": {
                        "type": "string",
                        "description": "Es el nombre de los eventos"
                    },
                    "category": {
                        "type": "string",
                        "description": "Determina la categoria del evento"
                    },
                    "date": {
                        "type": "string",
                        "description": "Fecha el cual se hizo o se espera el evento"
                    },
                    "description": {
                        "type": "string",
                        "description": "Describe cada eventos"
                    },
                    "image": {
                        "type": "string",
                        "description": "Una breve foto del evento"
                    },
                    "price": {
                        "type": "Number",
                        "description": "El costo que tiene el evento"
                    },
                    "place": {
                        "type": "string",
                        "description": "El lugar en donde se llevar치 cabo el evento"
                    },
                    "capacity": {
                        "type": "Number",
                        "description": "Cantidad de personas que pueden estar en el evento"
                    },
                    "assistance": {
                        "type": "Number",
                        "description": "Si es un evento pasado de la fecha, determina cuantas personas fueron al evento"
                    },
                    "estimate": {
                        "type": "Number",
                        "description": "Si es un evento futuro de la fecha, determina cuantas personas entran al evento"
                    }
                }
            },
            "recursos": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "place": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    },
                    "capacity": {
                        "type": "number"
                    },
                    "assistance": {
                        "type": "number"
                    },
                    "estimate": {
                        "type": "number"
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "register": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "confirmPassword": {
                        "type": "string"
                    },
                    "rol": {
                        "type": "string",
                        "enum": [
                            "ADMIN",
                            "USER"
                        ]
                    }
                }
            },
            "buys": {
                "schema": {
                    "type": "array"
                },
                "items": {
                    "type": "object"
                },
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "El nombre de evento"
                    },
                    "quantity": {
                        "type": "number",
                        "description": "Cantidad de personas"
                    },
                    "price": {
                        "type": "number",
                        "description": "El precio del evento"
                    }
                }
            },
            "message": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}